{
  "name": "weather-caddy",
  "version": "0.0.5",
  "description": "An awesome weather app",
  "main": "./build/index.js",
  "scripts": {
    "build": "tsc",
    "electron:start": "npm run build && electron ./",
    "electron:pack": "npm run build && electron-builder build --dir",
    "electron:build-windows": "npm run build && electron-builder build --windows",
    "electron:build-mac": "npm run build && electron-builder build --mac"
  },
  "dependencies": {
    "@capacitor-community/electron": "^1.4.2"
  },
  "devDependencies": {
    "electron": "~11.5.0",
    "electron-builder": "^22.11.7",
    "typescript": "~4.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jlane9/weather-caddy.git"
  },
  "build": {
    "appId": "com.jlane.weathercaddy",
    "productName": "Weather Caddy",
    "files": [
      "assets/*",
      "build/*",
      "preloader.js",
      "plugins/*",
      "capacitor.config.json",
      "app/**"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg",
      "icon": "appIcon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "appIcon.ico"
    }
  }
}
